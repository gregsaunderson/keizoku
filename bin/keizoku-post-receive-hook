#!/usr/bin/env ruby

require 'rubygems'
require 'keizoku'
require 'yaml'

git_repo = Keizoku::GitRepo.new
config = YAML.load("#{__FILE__}.conf")
queuer = Keizoku::IntegrationQueuer.new(config["queue_path"])
hook = Keizoku::GitHook.new($stdin, git_repo, config["repo_url"])

if hook.parse
  queuer.enqueue hook.integration_request
  exit 0
else
  $stderr.puts hook.errors
  exit 1
end
